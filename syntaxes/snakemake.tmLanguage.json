{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Snakemake",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#functions"
		},
		{
			"include": "source.python"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"match": "^\\s*(rule|subworkflow|checkpoint)(?:\\s+(\\w+))?:",
					"captures":{
						"1": {
							"name": "keyword.control.snakemake"
						},
						"2": {
							"name": "entity.name.function.snakemake"
						}
					}
				},
				{
					"match": "^\\s*(include|configfile|snakefile|workdir|ruleorder|localrules|onsuccess|onerror|onstart):",
					"captures":{
						"1": {
							"name": "keyword.control.snakemake"
						}
					}
				},
				{
					"match": "^\\s*(input|output|params|priority|shadow|group|log|benchmark|message|threads|resources|version|run|shell|script|cwl|conda|wildcard_constraints|wrapper):",
					"captures":{
						"1": {
							"name": "keyword.control.snakemake.ruleparams"
						}
					}
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"match": "(expand|unpack|ancient|directory|temp|protected|touch|pipe)",
					"name": "support.function.builtin.snakemake"
				}
			]
		}
	},
	"scopeName": "source.python.snakemake"
}
