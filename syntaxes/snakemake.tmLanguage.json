{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Snakemake",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "source.python"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"match": "^\\s*(rule)\\s*(\\w*):",
					"captures":{
						"1": {
							"name": "keyword.control.snakemake"
						},
						"2": {
							"name": "entity.name.function.snakemake"
						}
					}
				},
				{
					"match": "^\\s*(include|workdir):",
					"captures":{
						"1": {
							"name": "keyword.control.snakemake"
						}
					}
				},
				{
					"match": "^\\s*(input|output|params|log|benchmark|message|threads|resources|version|run|shell|script):",
					"captures":{
						"1": {
							"name": "keyword.control.snakemake.ruleparams"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.python.snakemake"
}
